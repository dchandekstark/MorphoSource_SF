
<div class="form-group" data-behavior="parent-relationships" data-param-key="<%= f.object.model_name.param_key %>" data-members="<%= f.object.member_of_works_json %>">
  <div class="form-inline">
    <%= f.label "Institution" %>
    <%= f.input_field :find_parent_work,
                      prompt: :translate,
                      autocomplete: 'off',
                      data: {
                        autocomplete: 'work',
                        'autocomplete-url' => find_institution_autocomplete_url()
                      } %>
    <a class="btn btn-sm btn-primary" data-behavior="add-relationship">Add institution</a>
    <a href="/submissions/new_institution" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#institution-modal">Create new institution</a>
  </div>
  <div class="message has-warning hidden"></div>
  <table class="table table-striped">
    <div style="margin-top: 10px">
  </div>
    <caption><%= t('.caption') %></caption>
    <tbody>
    </tbody>
  </table>
</div>

<script type="text/x-tmpl" id="tmpl-parent-work">
<tr>
  <td>{%= o.title %}</td>
  <td><button class="btn btn-sm btn-danger" data-behavior="remove-relationship" data-confirm-text="<%= t('.confirm.text') %>" data-confirm-cancel="<%= t('.confirm.cancel') %>" data-confirm-remove="<%= t('.confirm.remove') %>"><%= t('.actions.remove') %></button></td>
</tr>
</script>
