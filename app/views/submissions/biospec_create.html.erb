<% provide :page_title, t('morphosource.submission.page_title') %>
<% provide :page_header do %>
  <h1><%= t('morphosource.submission.page_header') %></h1>
<% end %>

<div class="submission_flow" id="submission_biospec_search">
  <%= simple_form_for @biological_specimen_form, url: stage_biological_specimen_submissions_url do |f| %>
    <div class="form-group">
      <%= render partial: 'work_creation_metadata', locals: {f: f} %>
      <div>
        <%= f.submit 'Create New Biological Specimen', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<%= render(partial: 'footer') %>
