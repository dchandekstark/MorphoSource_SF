<div id="submission_parent_details" class="derived_media hide">  
  <%= f.input :parent_media_type,
              as: :radio_buttons,
              collection: [ 
                Submission::PARENT_MEDIA_IN_MORPHOSOURCE, 
                Submission::PARENT_MEDIA_NOT_AVAILABLE, 
                Submission::PARENT_MEDIA_TO_BE_UPLOADED
              ] %>

  <div class="submission_flow" id="submission_select_parent_media">
    <%= simple_form_for @submission do |f| %>
      <%= render(partial: 'parent_media_select', locals: { f: f }) %>
    <% end %>
  </div>

  <% # = should not be needed. buttons should be in the corresponding form ---  <%= f.submit 'Continue', id: 'btn_parent_details_continue', class: 'btn btn-primary' %>
</div>
